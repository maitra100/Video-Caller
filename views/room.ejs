<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Zoom clone</title>
    <link href="/public/style.css" rel="styleshseet" >
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
    <style>
      body {
        color: white;
      }
      #video-grid {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      video {
        width: 300px;
        height: 300px;
      }
      p {
      }
      .main {
        height: 100vh;
        display: flex;
        margin: 0px;
        padding: 0px;
        left: 0px;
      }
      .main__left {
        flex: 0.8;
        display: flex;
        flex-direction: column;
        background-color: black;
      }
      .main__right {
        flex: 0.2;
      }
      .main__controls {
        display: flex;
        justify-content: space-between;
      }
      .main_controls_block {
        display: flex;
      }
      .main__controls__button1 {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 5px 5px;
        padding: 5px 5px;
        cursor: pointer;
      }
      .main__controls__button1:hover {
        background-color: rgba(39, 35, 35, 0.836);
        border-radius: 3px;
        color: green;
      }
      .main__right {
        display: flex;
        flex-direction: column;
        background-color: #242223;
        text-align: center;
      }
      .main_chat_window {
        flex-grow: 3;
      }
      .main_header {
        flex-grow: 0.1;
      }
      .message_area {
        flex-grow: 0.1;
      }
      #chat_message {
        width: 232px;
        height: 22px;
      }
      .message {
        display: flex;
        background-color: black;
        width: 231px;
        height: 30px;
        border-radius: 9px;
         align-items: center;
      }
      .p{
        margin:2px 4px;
        color:white;
      }
      .btn{
        background-color: black;
        color:white;
        border-radius: 5px;
      }
    </style>
  </head>
  <body>
    <div class="main">
      <div class="main__left">
        <div id="video-grid"></div>
        <div class="main__controls">
          <div class="main_controls_block">
            <div class="main__controls__button1">
              <i class="fas fa-microphone"></i>
              <span class="mute">Mute</span>
            </div>
            <div class="main__controls__button1">
              <i class="fas fa-video"></i>
              <span>Stop video</span>
            </div>
          </div>
          <div class="main_controls_block">
            <div class="main__controls__button1">
              <i class="far fa-comments"></i>
              <span>Chat</span>
            </div>
            <div class="main__controls__button1">
              <i class="fas fa-user-friends"></i>
              <span>Participants</span>
            </div>
            <div class="main__controls__button1">
              <i class="fas fa-shield-alt"></i>
              <span>Security</span>
            </div>
          </div>
          <div class="main_controls_block">
            <div class="main__controls__button1" style="color: red">
              <span>Leave meeting</span>
            </div>
          </div>
        </div>
      </div>

      <div class="main__right">
        <div class="main_header">
          <h3>Chat</h3>
        </div>
        <div class="main_chat_window">
          <div class="message">
            <p class="p">Hello</p>
          </div>
        </div>
        <form class="message_area">
          <input
            type="text"
            id="chat_message"
            placeholder="type message here"
          />
          <button class="btn">Submit</button>
        </form>
      </div>
    </div>
    <script src="./script.js"></script>
  </body>
</html>
